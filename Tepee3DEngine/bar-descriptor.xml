<?xml version='1.0' encoding='UTF-8' standalone='no'?>
<qnx xmlns="http://www.qnx.com/schemas/application/1.0">
    <id>com.example.tepee3dengine</id>
    <name>Tepee3DEngine</name>
    <versionNumber>1.0.0</versionNumber>
    <description>Tepee3D - The future of UI right now !</description>
    <initialWindow>
        <aspectRatio>landscape</aspectRatio>
        <autoOrients>false</autoOrients>
        <systemChrome>none</systemChrome>
        <transparent>false</transparent>
    </initialWindow>
    <author>TepeeTeam</author>
    <copyright>2013</copyright>
    <env value="app/native/imports" var="QML_IMPORT_PATH"/>
    <env value="app/native/imports" var="QML2_IMPORT_PATH"/>
    <env value="app/native/plugins" var="QT_PLUGIN_PATH"/>
    <env value="app/native/lib" var="LD_LIBRARY_PATH"/>
    <arg>-platform</arg>
    <arg>qnx</arg>
    <action system="true">run_native</action>
    <action>access_shared</action>
    <action>access_internet</action>
    <action>play_audio</action>
    <action>set_audio_volume</action>
    <asset type="Qnx/Elf" path="Tepee3DEngine/Tepee3DEngine" entry="true">Tepee3DEngine</asset>
    <asset path="%SRC_DIR%/Tepee3DEngine/qml">qml</asset>
    <asset path="%QT_INSTALL_LIBS%">lib</asset>
    <asset path="%QT_INSTALL_PLUGINS%">plugins</asset>
    <asset path="%QT_INSTALL_IMPORTS%">imports</asset>
    <asset path="%SRC_DIR%/qnx/icon.png">icon.png</asset>
    <asset path="%SRC_DIR%/Tepee3DEngine/libraries">libraries</asset>
    <asset path="%SRC_DIR%/Tepee3DEngine/plugins_qml">plugins_qml</asset>
    <asset path="%SRC_DIR%/Tepee3DEngine/DeveloperAPIFiles">DeveloperAPIFiles</asset>
    <asset path="%SRC_DIR%/Tepee3DEngine/databases">databases</asset>
    <!-- These values will be replaced when deploying in Qt Creator -->
    <!--    libraries Service | Room | Plugins-->
    <!--    Plugins Qml Files-->
    <!--    DeveloperAPIFiles-->
    <!--    Databases files-->
    <!--    Permissions-->
    <permission>access_internet</permission>
    <permission>narrow_landscape_exit</permission>
    <permission>post_notification</permission>
    <permission>access_shared</permission>
    <icon>
        <image>icon.png</image>
    </icon>
</qnx>
